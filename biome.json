{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "ignoreUnknown": true,
    "ignore": ["node_modules", ".next", "pnpm-lock.yaml", "bun.lock"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 120
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "indentStyle": "space",
      "indentWidth": 2,
      "trailingCommas": "all",
      "semicolons": "asNeeded",
      "lineWidth": 120
    }
  },
  "json": {
    "parser": {
      "allowComments": true
    },
    "formatter": {
      "indentWidth": 2,
      "indentStyle": "space",
      "lineWidth": 120,
      "trailingCommas": "none"
    }
  }
}
