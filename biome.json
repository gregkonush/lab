{
  "$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "ignoreUnknown": true,
    "includes": [
      "**",
      "!**/node_modules",
      "!**/.next",
      "!**/.output",
      "!**/dist",
      "!**/build",
      "!**/.mastra",
      "!**/.venv",
      "!tmp/**",
      "!**/coverage",
      "!**/pnpm-lock.yaml",
      "!**/bun.lock",
      "!**/src/app/routeTree.gen.ts",
      "!apps/proompteng/src/components/ui",
      "!schemas",
      "!services/facteur/internal/facteurpb/**",
      "!apps/froussard/src/proto/**"
    ],
    "maxSize": 1048576
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 120
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedImports": "error",
        "noNodejsModules": "off"
      },
      "suspicious": {
        "noUnknownAtRules": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "indentStyle": "space",
      "indentWidth": 2,
      "trailingCommas": "all",
      "semicolons": "asNeeded",
      "lineWidth": 120
    }
  },
  "json": {
    "parser": {
      "allowComments": true
    },
    "formatter": {
      "indentWidth": 2,
      "indentStyle": "space",
      "lineWidth": 120,
      "trailingCommas": "none"
    }
  }
}
