{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/gregkonush/lab/schemas/facteur-command-event.schema.json",
  "title": "Facteur Discord command event",
  "type": "object",
  "required": [
    "provider",
    "interactionId",
    "applicationId",
    "command",
    "commandId",
    "version",
    "token",
    "options",
    "user",
    "timestamp",
    "response"
  ],
  "properties": {
    "provider": {
      "type": "string",
      "const": "discord"
    },
    "interactionId": {
      "type": "string",
      "minLength": 1,
      "description": "Discord interaction identifier (snowflake)."
    },
    "applicationId": {
      "type": "string",
      "minLength": 1
    },
    "command": {
      "type": "string",
      "minLength": 1
    },
    "commandId": {
      "type": "string",
      "minLength": 1
    },
    "version": {
      "type": "integer",
      "minimum": 1
    },
    "token": {
      "type": "string",
      "minLength": 1,
      "description": "Follow-up token used to respond to the interaction."
    },
    "options": {
      "type": "object",
      "description": "Flattened command options with dot-separated keys for subcommands.",
      "additionalProperties": {
        "type": "string"
      }
    },
    "guildId": {
      "type": "string"
    },
    "channelId": {
      "type": "string"
    },
    "user": {
      "type": "object",
      "required": ["id"],
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        },
        "username": {
          "type": "string"
        },
        "globalName": {
          "type": ["string", "null"]
        },
        "discriminator": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "member": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "roles": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": false
    },
    "locale": {
      "type": "string"
    },
    "guildLocale": {
      "type": "string"
    },
    "response": {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": {
          "type": "integer",
          "const": 5
        },
        "flags": {
          "type": "integer"
        }
      },
      "additionalProperties": false
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    }
  },
  "additionalProperties": false
}
