{
  "name": "@proompteng/source",
  "license": "MIT",
  "version": "0.0.1",
  "engines": {
    "node": "22.20.0"
  },
  "scripts": {
    "dev:proompteng": "pnpm -r --parallel --filter proompteng --filter @proompteng/backend dev",
    "build:proompteng": "pnpm --filter proompteng build",
    "build:reviseur": "pnpm --filter reviseur build",
    "start:proompteng": "pnpm --filter proompteng start",
    "lint:proompteng": "pnpm --filter proompteng lint",
    "proto:generate": "buf generate",
    "clean": "pnpm -r exec rm -rf node_modules && rm -rf node_modules",
    "format": "biome format --write",
    "tf:plan": "tofu -chdir='./tofu/harvester' plan",
    "tf:apply": "tofu -chdir='./tofu/harvester' apply -auto-approve",
    "tf:destroy": "tofu -chdir='./tofu/harvester' destroy --target harvester_virtualmachine.kube-cluster -auto-approve",
    "ansible": "ansible-playbook -vvvv -i ./ansible/inventory/hosts.ini ./ansible/playbooks/rancher2.yml",
    "harvester:apply": "kubectl --kubeconfig ~/.kube/altra.yaml apply -f ./tofu/harvester/templates",
    "k:install": "./kubernetes/install.sh",
    "k:bootstrap": "kubectl apply -k argocd/applications/argocd",
    "prepare": "node scripts/run-husky-install.mjs",
    "dev:convex": "pnpm --filter @proompteng/backend dev",
    "dev:setup:convex": "pnpm --filter @proompteng/backend dev:setup",
    "seed:models": "pnpm --filter @proompteng/backend seed:models",
    "dev:docs": "pnpm --filter docs dev",
    "build:docs": "pnpm --filter docs build",
    "start:docs": "pnpm --filter docs start",
    "build:facteur": "bun run scripts/build-facteur.ts"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "@commitlint/cli": "19.6.0",
    "@commitlint/config-conventional": "19.6.0",
    "lint-staged": "16.2.3",
    "husky": "9.1.7",
    "typescript": "5.9.3"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,css}": "biome format --write",
    "*.go": "gofmt -w"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "pnpm@10.18.1+sha512.77a884a165cbba2d8d1c19e3b4880eee6d2fcabd0d879121e282196b80042351d5eb3ca0935fa599da1dc51265cc68816ad2bddd2a2de5ea9fdf92adbec7cd34",
  "dependencies": {
    "@headlessui/react": "^2.2.9"
  }
}
